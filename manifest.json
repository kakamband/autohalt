{
  "manifest_version": 2,
  "name": "AutoPause",
  "version": "0.1",

  "author": "Nicholas Gaya",
  "description": "Turns off autoplay by default on supported websites.",

  "icons": {
    "48": "icons/autopause.svg",
    "96": "icons/autopause.svg"
  },

  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content_scripts/youtube.js"]
    }
  ]
}
